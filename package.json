{
  "name": "react-electron-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "1.0.14"
  },
  "main": "main.js",
  "scripts": {
    "start": "cross-env PORT=3011 react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:3011 electron .",
    "dist": "electron-builder",
    "dist:win64": "electron-builder --win --x64"
  },
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "cross-env": "^5.1.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.37.2",
    "electron-devtools-installer": "^2.2.1",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.3",
    "react-app-rewired": "^1.3.3"
  },
  "homepage": "./",
  "build": {
    "asar": false,
    "files": ["main.js", "build/**", "!build/**/*.map"],
    "directories": {
      "buildResources": "build-res"
    }
  }
}
