{
  "name": "react-electron-boilerplate",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "builden",
    "url": "billdeng@qq.com"
  },
  "description": "react + electron + mobx bolierplate",
  "dependencies": {
    "commander": "^2.11.0",
    "luaparse": "^0.2.1"
  },
  "main": "main.js",
  "scripts": {
    "start": "cross-env PORT=3011 react-app-rewired start",
    "start:web": "cross-env PORT=3012 react-app-rewired start -s EditorTest -w",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:3011 electron .",
    "dist": "electron-builder",
    "dist:win64": "electron-builder --win --x64"
  },
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "copy-webpack-plugin": "^4.2.0",
    "cross-env": "^5.1.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.43.4",
    "electron-devtools-installer": "^2.2.1",
    "lodash": "^4.17.4",
    "lua-fmt": "^2.4.0",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.4",
    "monaco-editor": "^0.10.1",
    "react": "^16.0.0",
    "react-app-rewired": "^1.3.4",
    "react-dom": "^16.0.0",
    "react-scripts": "1.0.16"
  },
  "homepage": "./",
  "build": {
    "files": ["main.js", "build/**", "!build/**/*.map"],
    "directories": {
      "buildResources": "build-res"
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "prefer-const": "warn",
      "new-cap": "warn",
      "no-var": "warn",
      "camelcase": [
        "warn",
        {
          "properties": "never"
        }
      ]
    }
  }
}
